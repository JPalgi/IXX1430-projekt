<% include partials/headerAdmin %>

<div class="container text-center mt-5">

    <!-- Kustuta toode Modal -->
    <div class="modal fade" id="kustuta" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalCenterTitle">Toote Kustutamine</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
		<div class="modal-body">
        	    <p id="kustutaText"></p>
      		</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Tagasi</button>
                    <form id="delModal" action="" method="POST">
                        <button type="submit" class="btn btn-danger">Jah, kustuta toode</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <a class="btn btn-outline-primary btn-lg shadow mb-5" id="btnLisa" href="/admin/tooted/uus"> Lisa uus Toode</a>
    <h2>Joogid</h2>
    <table class="table table-hover table-bordered mt-4 shadow">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Toote Kategooria</th>
                <th scope="col">Nimetus</th>
                <th scope="col">Kogus</th>
                <th scope="col">Hind</th>
                <th scope="col">Muuda</th>
	        <th><i class="fas fa-trash-alt"></i></th>
            </tr>
        </thead>
        <tbody>
            <% joogid.forEach((jook, i) => { %>
                <tr>
                    <th scope="row"> <%= i + 1 %> </th>
                    <td><%= jook.kategooria_nimetus %></td>
                    <td id="<%= jook.toote_id %>"><%= jook.nimetus %></td>
                    <td><%= jook.hetke_kogus %></td>
                    <td><%= jook.myygi_hind.toFixed(2) %>€</td>
                    <td><a href="/admin/tooted/muuda/<%= jook.toote_id %>">Muuda</a></td>
		    <td>
                        <a data-toggle="modal" data-target="#kustuta" id="kustutaModal" data-id="<%= jook.toote_id %>">
                            <i class="fas fa-trash-alt" style="color: #cc2900;"></i>
                        </a>
		    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <h2 class="mt-5">Söögid</h2>
    <table class="table table-hover table-bordered mt-4 mb-5 shadow">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Toote Kategooria</th>
                <th scope="col">Nimetus</th>
                <th scope="col">Kogus</th>
                <th scope="col">Hind</th>
                <th scope="col">Muuda</th>
		<th><i class="fas fa-trash-alt"></i></th>
            </tr>
        </thead>
        <tbody>
            <% soogid.forEach((sook, i) => { %>
                <tr>
                    <th scope="row"> <%= i + 1 %> </th>
                    <td><%= sook.kategooria_nimetus %></td>
                    <td id="<%= sook.toote_id %>"><%= sook.nimetus %></td>
                    <td><%= sook.hetke_kogus %></td>
                    <td><%= sook.myygi_hind.toFixed(2) %>€</td>
                    <td><a href="/admin/tooted/muuda/<%= sook.toote_id %>">Muuda</a></td>
                    <td>
                        <a data-toggle="modal" data-target="#kustuta" id="kustutaModal" data-id="<%= sook.toote_id %>">
                            <i class="fas fa-trash-alt" style="color: #cc2900;"></i>
                        </a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

</div>

<script>
    window.onload = function() {
    	$("td").each(function() {
            if(parseFloat($(this).text()) <= 0) { 
           	$(this).parent().css("background-color","#FF4141");
            }
    	})  
    }
    
    $(document).on("click", "#kustutaModal", function () {
     	let id = $(this).data('id');

	let nimi = $(`#${id}`).html();
	$('#kustutaText').html(`Oled kindel, et tahad kustudada toote <br><span style="font-weight: bold;">${nimi}</span>`);
	$('.btn-danger').html(`Jah, kustuta <span style="font-weight: bold;">${nimi}</span>`);

	$('#delModal').attr('action', '/admin/tooted/' + id + '/kustuta');
    });
</script>

<% include partials/footer %>