<% include partials/headerAdmin %>

<div class="container text-center mt-5">
    <h1 class="mb-4"> Muuda kasutajat <strong><%= kasutaja.eesnimi + " " +  kasutaja.perenimi %></strong> </h1>
    <form class="needs-validation" action="/admin/kasutajad/<%= kasutaja.kasutaja_id%>/" method="POST" novalidate>
        <div class="form-row justify-content-center">
            <div class="col-2">
                <label for="seis" class="col-form-label col-form-label-lg">Kasutaja Seis</label>
                <select id="seis" name="seis" class="form-control form-control-lg" required="required">
                    <option value="" disabled="disabled">Vali Seis</option>
                </select>
            </div>
            <div class="col-1">
                <label for="staatus" class="col-form-label col-form-label-lg">Kasutaja Staatus</label>
                <select id="staatus" name="staatus" class="form-control form-control-lg" required="required">
                    <option value="" disabled="disabled">Vali Staatus</option>
                </select>
            </div>
            <div class="col-4">
                <label for="eesnimi" class="col-form-label col-form-label-lg">Eesnimi</label>
                <input type="text" name="eesnimi" pattern=".{2,50}" class="form-control form-control-lg" id="eesnimi" value="<%= kasutaja.eesnimi %>" placeholder="Eesnimi" required>
            </div>
            <div class="col-4">
                <label for="perenimi" class="col-form-label col-form-label-lg">Perenimi</label>
                <input type="text" name="perenimi" pattern=".{2,50}" class="form-control form-control-lg" id="perenimi" value="<%= kasutaja.perenimi %>" placeholder="Perenimi" required>
            </div>
            <div class="col-1">
                <label for="volg" class="col-form-label col-form-label-lg">Kasutaja Võlg</label>
                <input type="number" name="volg" class="form-control form-control-lg text-center" id="volg" value="<%= kasutaja.volg.toFixed(1) %>" placeholder="Volg" style="width:150px;" step="0.1" min="0" max="9999.99" required>
            </div>
        </div>
        <div class="form-group mb-5">
            <div class="form-check form-check-inline kast1">
                <input class="form-check-input" name="check[]" type="checkbox" value="kinnitatud" id="kinnitatud">
                <label class="form-check-label pl-2" for="kinnitatud">Kinnitatud</label>
            </div>
        </div>
        <div class="row justify-content-around">
            <div class="col-4">
                <div class="row justify-content-end">
                    <a href="/admin/kasutajad/" class="btn btn-lg btn-outline-primary shadow" id="btnBack">&laquo; Tagasi</a>
                </div>
            </div>
            <div class="col-4">
                <div class="row justify-content-start">
                    <button class="btn btn-outline-success btn-lg shadow" id="btnBuy">Muuda &raquo;</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>

    $('#staatus').append($('<option>', { value: 1, text: 'reb!'}));
    $('#staatus').append($('<option>', { value: 2, text: 'sv!'}));
    $('#staatus').append($('<option>', { value: 3, text: 'b!vil!'}));
    $('#staatus').append($('<option>', { value: 4, text: 'vil!' }));
    $("#staatus").val("<%= kasutaja.kasutaja_staatuse_id %>");

    $('#seis').append($('<option>', { value: 1, text: 'Tavaline'}));
    $('#seis').append($('<option>', { value: 2, text: 'Juhtser'}));
    $('#seis').append($('<option>', { value: 3, text: 'Väljalangenu'}));
    $("#seis").val("<%= kasutaja.kasutaja_seisu_id %>");

    if (<%= kasutaja.admin_on_kinnitanud %>) {
        $("#kinnitatud").prop("checked", true);
    } else {
        $("#kinnitatud").prop("checked", false);
    }

    (() => {
        'use strict';
        window.addEventListener('load', () => {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            let forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            let validation = Array.prototype.filter.call(forms, (form) => {
                form.addEventListener('submit', (event) => {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();

</script>

<% include partials/footer %>